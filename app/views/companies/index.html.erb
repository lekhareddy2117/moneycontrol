<p id="notice"><%= notice %></p>


<div class="button">
  <%= link_to 'Scrape', api_v1_companies_data_path %>
  <%= link_to 'Chart', api_v1_companies_chart_path %>
  </div>
  <%if @companies%>
  <h1 align="center">Companies</h1>
<div class="companies">
<table>
  <thead>
    <tr>
      <th>Company_name</th>
      <th>Company_code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.c_name, api_v1_companies_details_path(:id=>company.id)%></td>
        <td><%= company.c_code %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%end%>



